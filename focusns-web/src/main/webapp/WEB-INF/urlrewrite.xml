<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>
    <rule>
        <note>Home Page</note>
        <from>^/$</from>
        <to>/portal?path=/index</to>
    </rule>
    <rule>
        <note>CMS Page</note>
        <from>^/(index|people)$</from>
        <to>/portal?path=/$1</to>
    </rule>
    <!-- site page -->
    <rule>
        <note>Site Page</note>
        <from>^/(login|register)$</from>
        <to>/portal?path=/$1</to>
    </rule>

    <rule>
        <note>Module Page</note>
        <from>^/([a-z]+)/(profile|blog|photo|team|msg|admin)$</from>
        <to>/portal?path=/$2&amp;projectCode=$1&amp;featureCode=$2</to>
    </rule>

    <rule>
        <note>Module Page</note>
        <from>^/([a-z]+)/(profile|blog|photo|team|msg|admin)/(.*?)$</from>
        <to>/portal?path=/$2/$3&amp;projectCode=$1&amp;featureCode=$2</to>
    </rule>

    <rule>
        <note>Console Page</note>
        <from>^/console$</from>
        <to>/portal?path=/console</to>
    </rule>
    <rule>
        <note>Console Page</note>
        <from>^/console/(site|cms|env)</from>
        <to>/portal?path=/console/$1</to>
    </rule>


    <outbound-rule match-type="wildcard">
        <condition type="context-path" operator="equal">/focusns</condition>
        <from>/*/**/*.action</from>
        <to>/$1/widget/$2/$3</to>
    </outbound-rule>

</urlrewrite>
